<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>

  <body>
    <div class="main w-fill min-h-screen bg-zinc-900">

      <!-- Heading -->
      <h1 class="text-center text-5xl font-extrabold 
        bg-gradient-to-r from-orange-400 via-pink-500 to-purple-600 
        bg-clip-text text-transparent 
        mb-4 pt-10 drop-shadow-lg">
        Add Your Task
      </h1>

      <!-- Form -->
      <div class="form p-10 text-white max-w-3xl mx-auto">
        <form action="/create" method="post" class="space-y-3">
          <input
            required="true"
            class="block px-5 py-3 w-full rounded-lg bg-zinc-800 outline-none
                   focus:ring-2 focus:ring-teal-500 transition"
            type="text"
            placeholder="title goes here!"
            name="title"
          />

          <textarea
            required="true"
            class="block px-5 py-3 w-full rounded-lg bg-zinc-800 outline-none resize-none
                   focus:ring-2 focus:ring-teal-500 transition"
            placeholder="Write your task detail"
            name="details"
          ></textarea>

          <input
            class="mt-3 px-6 py-3 rounded-lg font-semibold text-white
              bg-gradient-to-r from-green-400 via-teal-500 to-blue-500
              hover:from-green-500 hover:via-teal-600 hover:to-blue-600
              hover:scale-105 hover:shadow-lg hover:shadow-blue-500/40
              transition-all duration-300 cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks flex flex-wrap justify-center gap-6 p-10">

  <% if (files.length > 0) { %>
    <% files.forEach(function (val) { %>

      <div class="task w-[380px] max-w-full px-6 py-5 rounded-xl bg-zinc-800
                  border border-zinc-700
                  flex flex-col gap-4
                  hover:-translate-y-1
                  hover:shadow-xl hover:shadow-black/40
                  transition-all duration-300">

        <!-- Row 1 -->
        <div class="flex items-center justify-between gap-4">
          <h1 class="text-white text-2xl font-semibold truncate">
            <%= val %>
          </h1>

          <a
            class="px-4 py-1.5 rounded-md font-semibold text-white
                   bg-gradient-to-r from-red-500 via-rose-500 to-pink-500"
            href="/remove/<%= val %>">
            Remove
          </a>
        </div>

        <!-- Row 2 -->
        <div class="flex gap-3">
          <a
            class="px-4 py-2 rounded-md font-semibold text-white
                   bg-gradient-to-r from-sky-400 via-cyan-500 to-teal-500"
            href="/files/<%= val %>">
            Read more
          </a>

          <a
            class="px-4 py-2 rounded-md font-semibold text-white
                   bg-gradient-to-r from-orange-400 via-pink-500 to-purple-600"
            href="/edit/<%= val %>">
            Update
          </a>
        </div>

      </div>

    <% }) %>
  <% } else { %>
    <h1 class="text-zinc-600">No task yet.</h1>
  <% } %>

</div>


      </div>
    </div>
  </body>
</html>
